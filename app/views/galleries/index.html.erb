<h3>Viewing Gallery Table :</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.description %></td>
      <td><%= link_to "Show", gallery_path(gallery) %></td>
      <td><%= link_to "Edit", edit_gallery_path(gallery) %></td>
      <td>
        <%= form_for gallery, method: :delete do |form| %>
          <%= form.submit "Delete Gallery" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<hr />

<%= link_to "Create a new gallery", new_gallery_path %>
