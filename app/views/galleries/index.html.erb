<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.description %></td>
      <td><a href="/galleries/<%= gallery.id %>">Show</a></td>
      <td><a href="/galleries/<%= gallery.id %>/edit">Edit</a></td>
    </tr>
  <% end %>
</table>

<hr />

<a href="/galleries/new">Create a new gallery</a>
