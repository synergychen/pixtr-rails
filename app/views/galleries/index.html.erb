<h3>Viewing Gallery Table :</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.description %></td>
      <td><%= link_to "Show", "/galleries/#{gallery.id}" %></td>
      <td><%= link_to "Edit", "/galleries/#{gallery.id}/edit" %></td>
      <td><%= link_to "Delete", "/galleries/#{gallery.id}/delete" %></td>
    </tr>
  <% end %>
</table>

<hr />

<a href="/galleries/new">Create a new gallery</a>
